<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="listHeading" parent="@android:style/TextAppearance.Large">
        <item name="android:color">@color/black</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TabHeading">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">28dp</item>
    </style>
    <style name="LibreFranklinBoldHeading">
        <item name="android:textColor">@color/near_black</item>
        <item name="fontFamily">@font/libre_franklin_bold</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="LibreFranklinSemiboldHeading">
        <item name="android:textColor">@color/near_black</item>
        <item name="fontFamily">@font/libre_franklin_semibold</item>
        <item name="android:textSize">24dp</item>
    </style>
    <style name="QuicksandRegularSubHeading">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:alpha">0.75</item>
    </style>
    <style name="QuicksandMediumSubHeading">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="Heading2">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="InterSemiboldHeading">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="BodyText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="CaptionText">
        <item name="android:textColor">@color/caption_text</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:tabStripEnabled">false</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabPaddingBottom">6dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#D05300</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>
</resources>