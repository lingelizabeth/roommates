<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white"></solid>
            <corners android:bottomRightRadius="@dimen/corner_radius"
                android:topRightRadius="@dimen/corner_radius"></corners>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/calm_blue"></solid>
                <corners android:bottomLeftRadius="@dimen/corner_radius"
                    android:topLeftRadius="@dimen/corner_radius"></corners>

            </shape>
        </clip>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp"
                android:color="@color/black"></stroke>
            <corners android:radius="7dp"/>
        </shape>
    </item>
</layer-list>