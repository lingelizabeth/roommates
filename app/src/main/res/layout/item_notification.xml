<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tan_rounded_rectangle"
    android:padding="15dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@drawable/ic_os_notification_fallback_white_24dp" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/InterSemiboldHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:ellipsize="end"
        android:fontFamily="@font/libre_franklin_semibold"
        android:maxLines="2"
        android:textSize="16dp"
        tools:text="Rachel edited Grocery List" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/QuicksandMediumSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14dp"
        tools:text='"Eggs" changed to "Organic Eggs"' />

    <TextView
        android:id="@+id/tvTimeAgo"
        style="@style/QuicksandMediumSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivIcon"
        android:textColor="@color/caption_text"
        android:textSize="14dp"
        tools:text="2 minutes ago" />

    <ImageView
        android:id="@+id/ivNew"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/blue_notification_circle" />

</RelativeLayout>